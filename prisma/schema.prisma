generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["referentialIntegrity"]
}

datasource db {
    provider             = "mysql"
    url                  = env("DATABASE_URL")
    referentialIntegrity = "prisma"
}

model User {
    id          String      @id
    email       String      @unique
    avatar      String
    createdAt   DateTime    @default(now())
    updatedAt   DateTime    @updatedAt
    sharedCodes ShareCode[] @relation(name: "sharedCodes")
    linkedCodes ShareCode[] @relation(name: "linkedCodes")
}

model ShareCode {
    sharedBy   User    @relation(name: "sharedCodes", fields: [sharedById], references: [id])
    sharedById String
    code       String  @id @default(cuid())
    linkedTo   User?   @relation(name: "linkedCodes", fields: [linkedToId], references: [id])
    linkedToId String?

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
