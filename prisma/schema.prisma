generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model User {
  id String @id

  ShareCode ShareCode[]
}

model ShareCode {
  sharedBy   User   @relation(fields: [sharedById], references: [id])
  sharedById String
  code       String @id @default(cuid())
}
